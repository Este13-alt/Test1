<body>

<div id="app"></div>

<script>
  const app = document.getElementById("app");

  const questions = [
    {
      question: "Favorite Color?",
      answers: ["pink", "blue", "green", "purple", "orange"]
    },
    {
      question: "Favorite Animal?",
      answers: ["cat", "turtle", "dog", "bird", "capybara"]
    },
    {
      question: "Word that defines you the best?",
      answers: ["smart", "empathetic", "shy", "cunning", "silly"]
    }
  ];

  const characters = [
    {
      name: "Esmeralda",
      description: "Bold, intuitive, and emotionally powerful. You feel things deeply and move through life guided by passion and instinct.",
      image: "Esmeralda.jpeg"
    },
    {
      name: "Luna",
      description: "Gentle, thoughtful, and quietly strong. You observe before you act and bring calm wherever you go.",
      image: "Luna.jpeg"
    },
    {
      name: "Percy",
      description: "Clever, curious, and endlessly adaptable. You thrive in chaos and always find a creative way forward.",
      image: "Percy.jpeg"
    },
    {
      name: "Bella",
      description: "Warm, expressive, and magnetic. People are naturally drawn to your energy and sincerity.",
      image: "Bella.jpeg"
    }
  ];

  let currentQuestion = 0;
  let chosenCharacter = null;

  function showStartScreen() {
    app.innerHTML = `
      <div class="screen" onclick="startQuiz()" style="cursor:pointer;">
        <img src="Legacy.jpeg" alt="Legacy">
      </div>
    `;
  }

  function startQuiz() {
    currentQuestion = 0;
    showQuestion();
  }

  function showQuestion() {
    const q = questions[currentQuestion];
    app.innerHTML = `
      <div class="quiz-container">
        <h2>${q.question}</h2>
        ${q.answers.map(a =>
          `<button onclick="selectAnswer()">${a}</button>`
        ).join("")}
      </div>
    `;
  }

  function selectAnswer() {
    currentQuestion++;

    if (currentQuestion < questions.length) {
      showQuestion();
    } else {
      showLoadingScreen();
    }
  }

  function showLoadingScreen() {
    app.innerHTML = `
      <div class="screen">
        <img src="warriors.jpeg" alt="Warriors">
        <div class="loading">Revealing your destiny...</div>
        <div class="spinner"></div>
      </div>
    `;

    setTimeout(showResults, 3000);
  }

  function showResults() {
    chosenCharacter =
      characters[Math.floor(Math.random() * characters.length)];

    app.innerHTML = `
      <div class="results">
        <h2>You are ${chosenCharacter.name} ðŸ’–</h2>
        <img src="${chosenCharacter.image}" alt="${chosenCharacter.name}">
        <p>${chosenCharacter.description}</p>
      </div>
    `;

    setTimeout(showFinalScreen, 13000);
  }

  function showFinalScreen() {
    app.innerHTML = `
      <div class="screen">
        <img src="Amarcee.jpeg" alt="Amarcee">
        <button onclick="showStartScreen()">Restart Quiz</button>

        <div class="instagram">
          <div class="insta-icon">â—¦</div>
          <a href="https://instagram.com/amarcee_3" target="_blank">@amarcee_3</a>
        </div>
      </div>
    `;
  }

  showStartScreen();
</script>

</body>
</html>
